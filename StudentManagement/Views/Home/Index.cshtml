@{
    ViewData["Title"] = "Dashboard";
}

<!-- Hero Banner với Parallax Animation -->
<div class="relative bg-gradient-to-br from-brand-50 to-white dark:from-gray-800 dark:to-gray-900 rounded-2xl mb-8 overflow-hidden" data-aos="fade-up">
    <!-- Floating Background Elements -->
    <div class="absolute inset-0">
        <div class="absolute top-10 left-10 w-20 h-20 bg-brand-100 rounded-full opacity-50 animate-pulse"></div>
        <div class="absolute top-32 right-20 w-16 h-16 bg-brand-200 rounded-full opacity-30 animate-bounce"></div>
        <div class="absolute bottom-20 left-32 w-12 h-12 bg-brand-300 rounded-full opacity-40 animate-ping"></div>
    </div>
    
    <!-- Content -->
    <div class="relative z-10 p-8 md:p-12">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
            <div data-aos="fade-right" data-aos-delay="200">
                <div class="inline-flex items-center px-3 py-1 bg-brand-100 text-brand-700 rounded-full text-sm font-medium mb-4">
                    🚀 Hệ thống học tập thông minh
                </div>
                <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
                    Chào mừng đến với<br>
                    <span class="bg-gradient-to-r from-brand-500 to-brand-700 bg-clip-text text-transparent">FPT Student Management</span>
                </h1>
                <p class="text-lg text-gray-600 dark:text-gray-300 mb-8">
                    Tối ưu hóa lộ trình học tập với sự hỗ trợ của AI và hệ thống quản lý tài chính minh bạch.
                </p>
                <div class="flex flex-col sm:flex-row gap-4">
                    <a href="@Url.Action("Login", "Auth")" class="inline-flex items-center justify-center px-6 py-3 bg-brand-500 text-white font-medium rounded-lg hover:bg-brand-600 transition-colors">
                        Bắt đầu ngay
                        <i data-lucide="arrow-right" class="w-4 h-4 ml-2"></i>
                    </a>
                    <a href="@Url.Action("Register", "Auth")" class="inline-flex items-center justify-center px-6 py-3 border border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-800 transition-colors">
                        Tìm hiểu thêm
                    </a>
                </div>
            </div>
            <div class="relative" data-aos="fade-left" data-aos-delay="400">
                <div class="relative">
                    <img src="https://images.unsplash.com/photo-1522202176988-66273c2fd55f?ixlib=rb-4.0.3&auto=format&fit=crop&w=1471&q=80" alt="Students studying" class="rounded-2xl shadow-2xl w-full">
                    <div class="absolute -bottom-6 -left-6 bg-white dark:bg-gray-800 p-4 rounded-xl shadow-lg">
                        <div class="flex items-center space-x-3">
                            <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
                                <i data-lucide="check-circle" class="w-5 h-5 text-green-600"></i>
                            </div>
                            <div>
                                <p class="font-semibold text-gray-900 dark:text-white">GPA 3.8</p>
                                <p class="text-sm text-gray-500 dark:text-gray-400">Học lực Giỏi</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Dashboard Metrics -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700" data-aos="fade-up" data-aos-delay="100">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Tổng sinh viên</p>
                <p class="text-2xl font-bold text-gray-900 dark:text-white">5,234</p>
                <p class="text-sm text-green-600 dark:text-green-400 flex items-center">
                    <i data-lucide="trending-up" class="w-4 h-4 mr-1"></i>
                    +12% so với tháng trước
                </p>
            </div>
            <div class="w-12 h-12 bg-brand-100 dark:bg-brand-900 rounded-lg flex items-center justify-center">
                <i data-lucide="users" class="w-6 h-6 text-brand-600 dark:text-brand-400"></i>
            </div>
        </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700" data-aos="fade-up" data-aos-delay="200">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Môn học</p>
                <p class="text-2xl font-bold text-gray-900 dark:text-white">127</p>
                <p class="text-sm text-green-600 dark:text-green-400 flex items-center">
                    <i data-lucide="trending-up" class="w-4 h-4 mr-1"></i>
                    +5 môn mới
                </p>
            </div>
            <div class="w-12 h-12 bg-orange-100 dark:bg-orange-900 rounded-lg flex items-center justify-center">
                <i data-lucide="book-open" class="w-6 h-6 text-orange-600 dark:text-orange-400"></i>
            </div>
        </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700" data-aos="fade-up" data-aos-delay="300">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Giảng viên</p>
                <p class="text-2xl font-bold text-gray-900 dark:text-white">258</p>
                <p class="text-sm text-blue-600 dark:text-blue-400 flex items-center">
                    <i data-lucide="user-plus" class="w-4 h-4 mr-1"></i>
                    +8 giảng viên mới
                </p>
            </div>
            <div class="w-12 h-12 bg-green-100 dark:bg-green-900 rounded-lg flex items-center justify-center">
                <i data-lucide="user-check" class="w-6 h-6 text-green-600 dark:text-green-400"></i>
            </div>
        </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700" data-aos="fade-up" data-aos-delay="400">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Lớp học</p>
                <p class="text-2xl font-bold text-gray-900 dark:text-white">84</p>
                <p class="text-sm text-purple-600 dark:text-purple-400 flex items-center">
                    <i data-lucide="calendar" class="w-4 h-4 mr-1"></i>
                    Đang diễn ra
                </p>
            </div>
            <div class="w-12 h-12 bg-purple-100 dark:bg-purple-900 rounded-lg flex items-center justify-center">
                <i data-lucide="school" class="w-6 h-6 text-purple-600 dark:text-purple-400"></i>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="bg-white dark:bg-gray-800 rounded-xl p-8 border border-gray-200 dark:border-gray-700 mb-8" data-aos="fade-up">
    <div class="text-center mb-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Khám phá Tiện ích</h2>
        <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
            Chúng tôi cung cấp hệ sinh thái số hóa toàn diện cho hành trình học tập tại FPT.
        </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="text-center p-6 rounded-xl hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
            <div class="w-16 h-16 bg-indigo-100 rounded-xl flex items-center justify-center mx-auto mb-4">
                <i data-lucide="brain" class="w-8 h-8 text-indigo-600"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">Phân Tích AI</h3>
            <p class="text-gray-600 dark:text-gray-400">
                Sử dụng trí tuệ nhân tạo để nhận xét điểm mạnh và gợi ý lộ trình học tập cá nhân hóa.
            </p>
        </div>

        <div class="text-center p-6 rounded-xl hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
            <div class="w-16 h-16 bg-orange-100 rounded-xl flex items-center justify-center mx-auto mb-4">
                <i data-lucide="wallet" class="w-8 h-8 text-orange-600"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">Ví Điện Tử</h3>
            <p class="text-gray-600 dark:text-gray-400">
                Thanh toán học phí nhanh chóng với cơ chế Atomic Transaction, đảm bảo an toàn tuyệt đối.
            </p>
        </div>

        <div class="text-center p-6 rounded-xl hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
            <div class="w-16 h-16 bg-green-100 rounded-xl flex items-center justify-center mx-auto mb-4">
                <i data-lucide="calendar-check" class="w-8 h-8 text-green-600"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">Đăng Ký Thông Minh</h3>
            <p class="text-gray-600 dark:text-gray-400">
                Hệ thống tự động kiểm tra điều kiện tiên quyết và trùng lịch (Slot Id) trong tích tắc.
            </p>
        </div>
    </div>
</div>

<!-- Charts and Activities -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
    <!-- Monthly Registration Chart -->
    <div class="lg:col-span-2 bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700" data-aos="fade-up" data-aos-delay="100">
        <div class="flex items-center justify-between mb-6">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Đăng ký theo tháng</h3>
            <select class="text-sm border border-gray-300 dark:border-gray-600 rounded-lg px-3 py-2 dark:bg-gray-700 dark:text-white">
                <option>2024</option>
                <option>2023</option>
            </select>
        </div>
        <div class="h-80">
            <canvas id="monthlyChart"></canvas>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700" data-aos="fade-up" data-aos-delay="200">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-6">Thống kê nhanh</h3>
        <div class="space-y-4">
            <div class="flex items-center justify-between p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
                <div class="flex items-center space-x-3">
                    <div class="w-10 h-10 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center">
                        <i data-lucide="graduation-cap" class="w-5 h-5 text-blue-600 dark:text-blue-400"></i>
                    </div>
                    <div>
                        <p class="font-medium text-gray-900 dark:text-white">Tốt nghiệp</p>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Năm 2024</p>
                    </div>
                </div>
                <span class="text-lg font-bold text-gray-900 dark:text-white">1,234</span>
            </div>

            <div class="flex items-center justify-between p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
                <div class="flex items-center space-x-3">
                    <div class="w-10 h-10 bg-green-100 dark:bg-green-900 rounded-lg flex items-center justify-center">
                        <i data-lucide="trophy" class="w-5 h-5 text-green-600 dark:text-green-400"></i>
                    </div>
                    <div>
                        <p class="font-medium text-gray-900 dark:text-white">GPA >= 3.5</p>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Học lực khá-giỏi</p>
                    </div>
                </div>
                <span class="text-lg font-bold text-gray-900 dark:text-white">3,456</span>
            </div>

            <div class="flex items-center justify-between p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
                <div class="flex items-center space-x-3">
                    <div class="w-10 h-10 bg-yellow-100 dark:bg-yellow-900 rounded-lg flex items-center justify-center">
                        <i data-lucide="clock" class="w-5 h-5 text-yellow-600 dark:text-yellow-400"></i>
                    </div>
                    <div>
                        <p class="font-medium text-gray-900 dark:text-white">Chờ xử lý</p>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Đơn đăng ký</p>
                    </div>
                </div>
                <span class="text-lg font-bold text-gray-900 dark:text-white">42</span>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activities -->
<div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700" data-aos="fade-up">
    <div class="flex items-center justify-between mb-6">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Hoạt động gần đây</h3>
        <a href="#" class="text-brand-500 hover:text-brand-600 text-sm font-medium">Xem tất cả</a>
    </div>
    
    <div class="space-y-4">
        <div class="flex items-center space-x-4 p-4 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg transition-colors">
            <div class="w-10 h-10 bg-green-100 dark:bg-green-900 rounded-lg flex items-center justify-center flex-shrink-0">
                <i data-lucide="user-plus" class="w-5 h-5 text-green-600 dark:text-green-400"></i>
            </div>
            <div class="flex-1">
                <p class="text-sm font-medium text-gray-900 dark:text-white">Sinh viên mới đăng ký</p>
                <p class="text-sm text-gray-500 dark:text-gray-400">Nguyễn Văn A đã đăng ký môn PRF192</p>
            </div>
            <span class="text-sm text-gray-500 dark:text-gray-400">2 phút trước</span>
        </div>

        <div class="flex items-center space-x-4 p-4 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg transition-colors">
            <div class="w-10 h-10 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center flex-shrink-0">
                <i data-lucide="file-text" class="w-5 h-5 text-blue-600 dark:text-blue-400"></i>
            </div>
            <div class="flex-1">
                <p class="text-sm font-medium text-gray-900 dark:text-white">Điểm số được cập nhật</p>
                <p class="text-sm text-gray-500 dark:text-gray-400">Lớp SE1801-PRO đã có điểm giữa kỳ</p>
            </div>
            <span class="text-sm text-gray-500 dark:text-gray-400">15 phút trước</span>
        </div>

        <div class="flex items-center space-x-4 p-4 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg transition-colors">
            <div class="w-10 h-10 bg-purple-100 dark:bg-purple-900 rounded-lg flex items-center justify-center flex-shrink-0">
                <i data-lucide="credit-card" class="w-5 h-5 text-purple-600 dark:text-purple-400"></i>
            </div>
            <div class="flex-1">
                <p class="text-sm font-medium text-gray-900 dark:text-white">Thanh toán học phí</p>
                <p class="text-sm text-gray-500 dark:text-gray-400">Trần Thị B đã thanh toán 4.500.000 VNĐ</p>
            </div>
            <span class="text-sm text-gray-500 dark:text-gray-400">1 giờ trước</span>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Monthly Registration Chart
        const ctx = document.getElementById('monthlyChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['T1', 'T2', 'T3', 'T4', 'T5', 'T6', 'T7', 'T8', 'T9', 'T10', 'T11', 'T12'],
                datasets: [{
                    label: 'Đăng ký mới',
                    data: [450, 520, 380, 620, 750, 890, 430, 520, 680, 590, 720, 650],
                    borderColor: '#465FFF',
                    backgroundColor: 'rgba(70, 95, 255, 0.1)',
                    borderWidth: 3,
                    fill: true,
                    tension: 0.4,
                    pointBackgroundColor: '#465FFF',
                    pointBorderColor: '#ffffff',
                    pointBorderWidth: 2,
                    pointRadius: 6,
                    pointHoverRadius: 8
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    x: {
                        border: {
                            display: false
                        },
                        grid: {
                            display: false
                        },
                        ticks: {
                            color: '#64748b'
                        }
                    },
                    y: {
                        border: {
                            display: false
                        },
                        grid: {
                            color: 'rgba(0,0,0,0.05)'
                        },
                        ticks: {
                            color: '#64748b'
                        }
                    }
                }
            }
        });
    </script>
}