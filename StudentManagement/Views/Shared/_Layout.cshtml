<!DOCTYPE html>
<html lang="vi" class="scroll-smooth">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FPT Student Management</title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Google Fonts - Outfit -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
    <!-- AOS Animation Library -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        'outfit': ['Outfit', 'sans-serif']
                    },
                    colors: {
                        'brand': {
                            25: '#f2f7ff',
                            50: '#ecf3ff', 
                            100: '#dde9ff',
                            200: '#c2d6ff',
                            300: '#9cb9ff',
                            400: '#7592ff',
                            500: '#465fff',
                            600: '#3b51db',
                            700: '#3142b7',
                            800: '#2a3693',
                            900: '#252d7a'
                        },
                        'gray': {
                            50: '#f8fafc',
                            100: '#f1f5f9',
                            200: '#e2e8f0',
                            300: '#cbd5e1',
                            400: '#94a3b8',
                            500: '#64748b',
                            600: '#475569',
                            700: '#334155',
                            800: '#1e293b',
                            900: '#0f172a'
                        }
                    },
                    zIndex: {
                        '99999': '99999'
                    }
                }
            },
            darkMode: 'class'
        }
    </script>
    
    <style>
        /* Custom CSS cho Sidebar Toggle */
        .sidebar {
            transition: width 0.3s ease, transform 0.3s ease;
        }
        
        .sidebar.collapsed {
            width: 80px;
        }
        
        .sidebar.collapsed .sidebar-text {
            opacity: 0;
            width: 0;
            overflow: hidden;
        }
        
        .sidebar.collapsed .sidebar-logo {
            justify-content: center;
        }
        
        .sidebar.collapsed .sidebar-collapse-icon {
            transform: rotate(180deg);
        }
        
        .main-content {
            transition: margin-left 0.3s ease;
        }
        
        .main-content.sidebar-collapsed {
            margin-left: 80px;
        }
        
        /* Responsive cho mobile */
        .sidebar-mobile .sidebar.collapsed {
            width: 290px;
        }
        .sidebar-mobile .main-content.sidebar-collapsed {
            margin-left: 0;
        }
        
        /* Ẩn text trong menu khi collapsed */
        .sidebar.collapsed .nav-text {
            opacity: 0;
            width: 0;
            overflow: hidden;
            white-space: nowrap;
        }
        
        .nav-text {
            transition: all 0.3s ease;
        }
        
        /* Tooltip cho collapsed state */
        .sidebar.collapsed [data-tooltip] {
            position: relative;
        }
        
        .sidebar.collapsed [data-tooltip]:hover::after {
            content: attr(data-tooltip);
            position: absolute;
            left: 60px;
            top: 50%;
            transform: translateY(-50%);
            background: rgba(0, 0, 0, 0.8);
            color: white;
            padding: 8px 12px;
            border-radius: 6px;
            font-size: 14px;
            white-space: nowrap;
            z-index: 1000;
            pointer-events: none;
        }
    </style>
</head>
<body class="font-outfit bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-white">
    <!-- Main Layout Container -->
    <div class="min-h-screen xl:flex">
        <!-- Sidebar -->
        <aside id="sidebar" class="sidebar fixed inset-y-0 left-0 z-99999 w-[290px] transform transition-all duration-300 ease-in-out lg:translate-x-0 lg:static lg:inset-0 -translate-x-full bg-white dark:bg-gray-800 border-r border-gray-200 dark:border-gray-700">
            <!-- Sidebar Header -->
            <div class="flex items-center justify-between h-16 px-6 border-b border-gray-200 dark:border-gray-700">
                <a href="@Url.Action("Index", "Home")" class="sidebar-logo flex items-center space-x-3 transition-all duration-300">
                    <div class="w-10 h-10 bg-brand-500 rounded-lg flex items-center justify-center flex-shrink-0">
                        <i data-lucide="graduation-cap" class="w-6 h-6 text-white"></i>
                    </div>
                    <span class="sidebar-text text-xl font-bold text-gray-900 dark:text-white transition-all duration-300">FPT SMS</span>
                </a>
                <div class="flex items-center space-x-2">
                    <!-- Desktop Collapse Button -->
                    <button id="collapseSidebar" class="hidden lg:flex items-center justify-center w-8 h-8 p-1 rounded-lg text-gray-500 hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-700 transition-colors" title="Thu gọn menu">
                        <i data-lucide="chevrons-left" class="sidebar-collapse-icon w-4 h-4 transition-transform duration-300"></i>
                    </button>
                    <!-- Mobile Close Button -->
                    <button id="closeSidebar" class="lg:hidden p-2 rounded-lg text-gray-500 hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-700">
                        <i data-lucide="x" class="w-5 h-5"></i>
                    </button>
                </div>
            </div>

            <!-- Navigation -->
            <nav class="p-4 space-y-2">
                @{
                    var userRole = Context.Session.GetString("UserRole");
                    var userId = Context.Session.GetString("UserId");
                }

                <!-- Dashboard -->
                <div class="space-y-1">
                    <a href="@Url.Action("Index", "Home")" class="flex items-center space-x-3 px-4 py-3 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors" data-tooltip="Trang chủ">
                        <i data-lucide="home" class="w-5 h-5 flex-shrink-0"></i>
                        <span class="nav-text font-medium">Trang chủ</span>
                    </a>
                </div>

                @if (!string.IsNullOrEmpty(userRole))
                {
                    <!-- Role-based Navigation -->
                    @if (userRole == "Admin")
                    {
                        <!-- Admin Menu -->
                        <div class="space-y-1">
                            <button class="nav-group-toggle flex items-center justify-between w-full px-4 py-3 text-left text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors" data-tooltip="Quản trị hệ thống">
                                <div class="flex items-center space-x-3">
                                    <i data-lucide="settings" class="w-5 h-5 flex-shrink-0"></i>
                                    <span class="nav-text font-medium">Quản trị hệ thống</span>
                                </div>
                                <i data-lucide="chevron-down" class="nav-text w-4 h-4 transform transition-transform"></i>
                            </button>
                            <div class="nav-submenu ml-6 space-y-1 hidden">
                                <a href="/User/Index" class="block px-4 py-2 text-sm text-gray-600 dark:text-gray-400 hover:text-brand-500 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg transition-colors">
                                    Quản lý người dùng
                                </a>
                                <a href="/Role/Index" class="block px-4 py-2 text-sm text-gray-600 dark:text-gray-400 hover:text-brand-500 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg transition-colors">
                                    Phân quyền
                                </a>
                                <a href="/System/Config" class="block px-4 py-2 text-sm text-gray-600 dark:text-gray-400 hover:text-brand-500 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg transition-colors">
                                    Cấu hình hệ thống
                                </a>
                            </div>
                        </div>
                    }

                    @if (userRole == "Admin" || userRole == "Manager")
                    {
                        <!-- Academic Management -->
                        <div class="space-y-1">
                            <button class="nav-group-toggle flex items-center justify-between w-full px-4 py-3 text-left text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors" data-tooltip="Quản lý học thuật">
                                <div class="flex items-center space-x-3">
                                    <i data-lucide="graduation-cap" class="w-5 h-5 flex-shrink-0"></i>
                                    <span class="nav-text font-medium">Quản lý học thuật</span>
                                </div>
                                <i data-lucide="chevron-down" class="nav-text w-4 h-4 transform transition-transform"></i>
                            </button>
                            <div class="nav-submenu ml-6 space-y-1 hidden">
                                <a href="/Subject/Index" class="block px-4 py-2 text-sm text-gray-600 dark:text-gray-400 hover:text-brand-500 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg transition-colors">
                                    Môn học
                                </a>
                                <a href="/Semester/Index" class="block px-4 py-2 text-sm text-gray-600 dark:text-gray-400 hover:text-brand-500 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg transition-colors">
                                    Học kỳ
                                </a>
                                <a href="/Class/Index" class="block px-4 py-2 text-sm text-gray-600 dark:text-gray-400 hover:text-brand-500 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg transition-colors">
                                    Lớp học
                                </a>
                                <a href="/Enrollment/Index" class="block px-4 py-2 text-sm text-gray-600 dark:text-gray-400 hover:text-brand-500 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg transition-colors">
                                    Đăng ký môn học
                                </a>
                            </div>
                        </div>
                    }

                    @if (userRole == "Teacher")
                    {
                        <!-- Teacher Menu -->
                        <div class="space-y-1">
                            <button class="nav-group-toggle flex items-center justify-between w-full px-4 py-3 text-left text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors" data-tooltip="Giảng dạy">
                                <div class="flex items-center space-x-3">
                                    <i data-lucide="book-open" class="w-5 h-5 flex-shrink-0"></i>
                                    <span class="nav-text font-medium">Giảng dạy</span>
                                </div>
                                <i data-lucide="chevron-down" class="nav-text w-4 h-4 transform transition-transform"></i>
                            </button>
                            <div class="nav-submenu ml-6 space-y-1 hidden">
                                <a href="/Teacher/Classes" class="block px-4 py-2 text-sm text-gray-600 dark:text-gray-400 hover:text-brand-500 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg transition-colors">
                                    Lớp học của tôi
                                </a>
                                <a href="/Grade/Input" class="block px-4 py-2 text-sm text-gray-600 dark:text-gray-400 hover:text-brand-500 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg transition-colors">
                                    Nhập điểm
                                </a>
                                <a href="/Teacher/Attendance" class="block px-4 py-2 text-sm text-gray-600 dark:text-gray-400 hover:text-brand-500 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg transition-colors">
                                    Điểm danh
                                </a>
                            </div>
                        </div>
                    }

                    @if (userRole == "Student")
                    {
                        <!-- Student Menu -->
                        <div class="space-y-1">
                            <button class="nav-group-toggle flex items-center justify-between w-full px-4 py-3 text-left text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors" data-tooltip="Học tập">
                                <div class="flex items-center space-x-3">
                                    <i data-lucide="book" class="w-5 h-5 flex-shrink-0"></i>
                                    <span class="nav-text font-medium">Học tập</span>
                                </div>
                                <i data-lucide="chevron-down" class="nav-text w-4 h-4 transform transition-transform"></i>
                            </button>
                            <div class="nav-submenu ml-6 space-y-1 hidden">
                                <a href="/Student/Enroll" class="block px-4 py-2 text-sm text-gray-600 dark:text-gray-400 hover:text-brand-500 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg transition-colors">
                                    Đăng ký môn học
                                </a>
                                <a href="/Student/Schedule" class="block px-4 py-2 text-sm text-gray-600 dark:text-gray-400 hover:text-brand-500 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg transition-colors">
                                    Thời khóa biểu
                                </a>
                                <a href="/Student/Grades" class="block px-4 py-2 text-sm text-gray-600 dark:text-gray-400 hover:text-brand-500 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg transition-colors">
                                    Xem điểm
                                </a>
                            </div>
                        </div>

                        <!-- Student Financial -->
                        <div class="space-y-1">
                            <button class="nav-group-toggle flex items-center justify-between w-full px-4 py-3 text-left text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors" data-tooltip="Tài chính">
                                <div class="flex items-center space-x-3">
                                    <i data-lucide="credit-card" class="w-5 h-5 flex-shrink-0"></i>
                                    <span class="nav-text font-medium">Tài chính</span>
                                </div>
                                <i data-lucide="chevron-down" class="nav-text w-4 h-4 transform transition-transform"></i>
                            </button>
                            <div class="nav-submenu ml-6 space-y-1 hidden">
                                <a href="/Student/Wallet" class="block px-4 py-2 text-sm text-gray-600 dark:text-gray-400 hover:text-brand-500 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg transition-colors">
                                    Ví học phí
                                </a>
                                <a href="/Student/Payment" class="block px-4 py-2 text-sm text-gray-600 dark:text-gray-400 hover:text-brand-500 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg transition-colors">
                                    Thanh toán học phí
                                </a>
                                <a href="/Student/TransactionHistory" class="block px-4 py-2 text-sm text-gray-600 dark:text-gray-400 hover:text-brand-500 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg transition-colors">
                                    Lịch sử giao dịch
                                </a>
                            </div>
                        </div>

                        <!-- AI Analysis -->
                        <a href="/Student/AIAnalysis" class="flex items-center space-x-3 px-4 py-3 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors" data-tooltip="Phân tích AI">
                            <i data-lucide="brain" class="w-5 h-5 flex-shrink-0"></i>
                            <span class="nav-text font-medium">AI Phân tích</span>
                        </a>
                    }

                    <!-- Common Features -->
                    <div class="space-y-1">
                        <button class="nav-group-toggle flex items-center justify-between w-full px-4 py-3 text-left text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors" data-tooltip="Báo cáo">
                            <div class="flex items-center space-x-3">
                                <i data-lucide="file-bar-chart" class="w-5 h-5 flex-shrink-0"></i>
                                <span class="nav-text font-medium">Báo cáo</span>
                            </div>
                            <i data-lucide="chevron-down" class="nav-text w-4 h-4 transform transition-transform"></i>
                        </button>
                        <div class="nav-submenu ml-6 space-y-1 hidden">
                            @if (userRole == "Admin" || userRole == "Manager")
                            {
                                <a href="/Report/Academic" class="block px-4 py-2 text-sm text-gray-600 dark:text-gray-400 hover:text-brand-500 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg transition-colors">
                                    Báo cáo học thuật
                                </a>
                                <a href="/Report/Financial" class="block px-4 py-2 text-sm text-gray-600 dark:text-gray-400 hover:text-brand-500 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg transition-colors">
                                    Báo cáo tài chính
                                </a>
                            }
                            @if (userRole == "Teacher")
                            {
                                <a href="/Report/Teaching" class="block px-4 py-2 text-sm text-gray-600 dark:text-gray-400 hover:text-brand-500 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg transition-colors">
                                    Báo cáo lớp học
                                </a>
                            }
                            @if (userRole == "Student")
                            {
                                <a href="/Report/Academic" class="block px-4 py-2 text-sm text-gray-600 dark:text-gray-400 hover:text-brand-500 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg transition-colors">
                                    Báo cáo học tập
                                </a>
                            }
                        </div>
                    </div>

                    <!-- User Profile -->
                    <a href="/Account/Profile" class="flex items-center space-x-3 px-4 py-3 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors" data-tooltip="Hồ sơ cá nhân">
                        <i data-lucide="user-circle" class="w-5 h-5 flex-shrink-0"></i>
                        <span class="nav-text font-medium">Hồ sơ cá nhân</span>
                    </a>
                }
                else
                {
                    <!-- Guest Menu -->
                    <a href="/Auth/Login" class="flex items-center space-x-3 px-4 py-3 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors" data-tooltip="Đăng nhập">
                        <i data-lucide="log-in" class="w-5 h-5 flex-shrink-0"></i>
                        <span class="nav-text font-medium">Đăng nhập</span>
                    </a>
                }

                <!-- Logout (Only for authenticated users) -->
                @if (!string.IsNullOrEmpty(userRole))
                {
                    <a href="/Auth/Logout" class="flex items-center space-x-3 px-4 py-3 text-red-600 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-lg transition-colors" data-tooltip="Đăng xuất">
                        <i data-lucide="log-out" class="w-5 h-5 flex-shrink-0"></i>
                        <span class="nav-text font-medium">Đăng xuất</span>
                    </a>
                }
            </nav>
        </aside>

        <!-- Backdrop for mobile -->
        <div id="sidebarBackdrop" class="fixed inset-0 bg-black bg-opacity-50 z-40 lg:hidden hidden"></div>

        <!-- Main Content -->
        <div id="mainContent" class="main-content flex-1 transition-all duration-300 ease-in-out lg:ml-0">
            <!-- Header -->
            <header class="sticky top-0 flex w-full bg-white border-b border-gray-200 z-50 dark:border-gray-700 dark:bg-gray-800">
                <div class="flex flex-col items-center justify-between grow lg:flex-row lg:px-6">
                    <div class="flex items-center justify-between w-full gap-2 px-3 py-3 lg:justify-normal lg:border-b-0 lg:px-0 lg:py-4">
                        <!-- Toggle Button -->
                        <button id="toggleSidebar" class="flex items-center justify-center w-10 h-10 text-gray-500 border border-gray-200 rounded-lg dark:border-gray-700 lg:w-11 lg:h-11 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors" aria-label="Toggle Sidebar">
                            <i data-lucide="menu" class="w-5 h-5"></i>
                        </button>

                        <!-- Search & User Info -->
                        <div class="flex items-center space-x-4">
                            <!-- Search Input -->
                            <div class="relative hidden lg:block">
                                <i data-lucide="search" class="absolute left-3 top-1/2 transform -translate-y-1/2 w-4 h-4 text-gray-400"></i>
                                <input type="text" placeholder="Tìm kiếm... (Ctrl+K)" class="pl-10 pr-4 py-2 border border-gray-200 dark:border-gray-600 rounded-lg text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-brand-500 w-64">
                            </div>
                            
                            <!-- Right Side Actions -->
                            <div class="flex items-center space-x-3">
                                <!-- Notifications -->
                                <button class="relative p-2 text-gray-500 hover:text-gray-600 dark:text-gray-400 dark:hover:text-gray-300 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
                                    <i data-lucide="bell" class="w-5 h-5"></i>
                                    <span class="absolute -top-1 -right-1 w-3 h-3 bg-red-500 rounded-full"></span>
                                </button>
                                
                                <!-- Theme Toggle -->
                                <button id="themeToggle" class="p-2 text-gray-500 hover:text-gray-600 dark:text-gray-400 dark:hover:text-gray-300 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
                                    <i data-lucide="moon" class="w-5 h-5 block dark:hidden"></i>
                                    <i data-lucide="sun" class="w-5 h-5 hidden dark:block"></i>
                                </button>
                                
                                <!-- User Profile Dropdown -->
                                <div class="relative group">
                                    <button class="flex items-center space-x-2 p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
                                        <img src="https://ui-avatars.com/api/?name=Admin&background=465fff&color=fff&size=32" alt="Admin" class="w-8 h-8 rounded-full">
                                        <span class="hidden lg:block text-sm font-medium text-gray-900 dark:text-white">Admin</span>
                                        <i data-lucide="chevron-down" class="w-4 h-4 text-gray-500 dark:text-gray-400"></i>
                                    </button>
                                    
                                    <!-- Dropdown Menu -->
                                    <div class="absolute right-0 mt-2 w-48 bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                                        <div class="p-2">
                                            <a href="@Url.Action("Profile", "Account")" class="flex items-center space-x-2 px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md transition-colors">
                                                <i data-lucide="user" class="w-4 h-4"></i>
                                                <span>Hồ sơ cá nhân</span>
                                            </a>
                                            <a href="@Url.Action("ManageAccounts", "Account")" class="flex items-center space-x-2 px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md transition-colors">
                                                <i data-lucide="settings" class="w-4 h-4"></i>
                                                <span>Cài đặt</span>
                                            </a>
                                            <div class="border-t border-gray-200 dark:border-gray-700 my-2"></div>
                                            <a href="@Url.Action("Logout", "Auth")" class="flex items-center space-x-2 px-3 py-2 text-sm text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-md transition-colors">
                                                <i data-lucide="log-out" class="w-4 h-4"></i>
                                                <span>Đăng xuất</span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <main class="flex-1 p-6">
                @RenderBody()
            </main>
        </div>
    </div>

    <script>
        // Initialize Lucide icons
        lucide.createIcons();

        // Initialize AOS
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true
        });

        // Theme toggle functionality
        const themeToggle = document.getElementById('themeToggle');
        const html = document.documentElement;

        // Load saved theme
        const savedTheme = localStorage.getItem('theme') || 'light';
        if (savedTheme === 'dark') {
            html.classList.add('dark');
        }

        themeToggle.addEventListener('click', () => {
            html.classList.toggle('dark');
            const isDark = html.classList.contains('dark');
            localStorage.setItem('theme', isDark ? 'dark' : 'light');
            lucide.createIcons(); // Refresh icons
        });

        // Sidebar toggle functionality
        const sidebar = document.getElementById('sidebar');
        const mainContent = document.getElementById('mainContent');
        const toggleSidebar = document.getElementById('toggleSidebar');
        const collapseSidebar = document.getElementById('collapseSidebar');
        const closeSidebar = document.getElementById('closeSidebar');
        const sidebarBackdrop = document.getElementById('sidebarBackdrop');
        
        let isCollapsed = localStorage.getItem('sidebarCollapsed') === 'true';
        
        // Apply saved state
        if (isCollapsed && window.innerWidth >= 1024) {
            sidebar.classList.add('collapsed');
            mainContent.classList.add('sidebar-collapsed');
        }
        
        // Desktop collapse/expand
        function toggleCollapse() {
            const collapsed = sidebar.classList.toggle('collapsed');
            mainContent.classList.toggle('sidebar-collapsed', collapsed);
            localStorage.setItem('sidebarCollapsed', collapsed);
            lucide.createIcons(); // Refresh icons
        }
        
        // Mobile sidebar show/hide
        function toggleMobileSidebar() {
            if (window.innerWidth < 1024) {
                sidebar.classList.toggle('-translate-x-full');
                sidebarBackdrop.classList.toggle('hidden');
            } else {
                toggleCollapse();
            }
        }
        
        // Event listeners
        toggleSidebar.addEventListener('click', toggleMobileSidebar);
        collapseSidebar.addEventListener('click', toggleCollapse);
        
        if (closeSidebar) {
            closeSidebar.addEventListener('click', () => {
                sidebar.classList.add('-translate-x-full');
                sidebarBackdrop.classList.add('hidden');
            });
        }
        
        if (sidebarBackdrop) {
            sidebarBackdrop.addEventListener('click', () => {
                sidebar.classList.add('-translate-x-full');
                sidebarBackdrop.classList.add('hidden');
            });
        }
        
        // Handle window resize
        window.addEventListener('resize', () => {
            const isMobile = window.innerWidth < 1024;
            document.body.classList.toggle('sidebar-mobile', isMobile);
            
            if (isMobile) {
                sidebar.classList.remove('-translate-x-full');
                sidebarBackdrop.classList.add('hidden');
                if (isCollapsed) {
                    sidebar.classList.add('collapsed');
                    mainContent.classList.add('sidebar-collapsed');
                }
            } else {
                sidebar.classList.remove('collapsed');
                mainContent.classList.remove('sidebar-collapsed');
            }
        });
        
        // Initialize mobile class
        document.body.classList.toggle('sidebar-mobile', window.innerWidth < 1024);

        // Search shortcut (Ctrl+K)
        document.addEventListener('keydown', (e) => {
            if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
                e.preventDefault();
                const searchInput = document.querySelector('input[placeholder*="Ctrl+K"]');
                if (searchInput) {
                    searchInput.focus();
                }
            }
        });

        // Navigation group toggles
        document.querySelectorAll('.nav-group-toggle').forEach(toggle => {
            toggle.addEventListener('click', () => {
                const submenu = toggle.nextElementSibling;
                const chevron = toggle.querySelector('[data-lucide="chevron-down"]');
                
                submenu.classList.toggle('hidden');
                chevron.classList.toggle('rotate-180');
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
