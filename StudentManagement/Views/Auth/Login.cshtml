@using StudentManagement.BLL.Services.DTOs
@model LoginDTO
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "_AuthLayout"; // Đảm bảo bạn đã có file này trong thư mục Shared
}

<div class="min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div class="text-center" data-aos="fade-up">
            <div class="mx-auto h-20 w-20 bg-white/20 backdrop-blur-sm rounded-3xl flex items-center justify-center mb-6 glass border-white/30">
                <div class="w-12 h-12 bg-gradient-to-br from-orange-400 to-red-500 rounded-2xl flex items-center justify-center">
                    <span class="text-white font-bold text-lg">FPT</span>
                </div>
            </div>
            <h1 class="text-4xl font-bold text-white mb-2">
                Chào mừng trở lại
            </h1>
            <p class="text-brand-100 text-lg">
                Đăng nhập vào hệ thống quản lý sinh viên FPT
            </p>
        </div>

        <div class="glass rounded-3xl p-8 backdrop-blur-md border-white/20" data-aos="fade-up" data-aos-delay="200">
            
            @* Hiển thị thông báo thành công từ TempData (ví dụ sau khi đăng ký) *@
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="mb-6 p-4 bg-green-500/20 border border-green-300/30 rounded-2xl">
                    <div class="flex items-center">
                        <i data-lucide="check-circle" class="w-5 h-5 text-green-300 mr-3"></i>
                        <span class="text-green-100 font-medium">@TempData["SuccessMessage"]</span>
                    </div>
                </div>
            }

            <form asp-controller="Auth" asp-action="Login" method="post" class="space-y-6">
                @Html.AntiForgeryToken()

                <div class="space-y-2">
                    <label asp-for="Email" class="block text-sm font-medium text-white/90 mb-2">
                        <i data-lucide="mail" class="w-4 h-4 inline mr-2"></i>
                        Email
                    </label>
                    <input asp-for="Email" type="email" required 
                           class="w-full px-4 py-4 bg-white/10 border border-white/20 rounded-2xl text-white placeholder-white/60 focus:outline-none focus:ring-2 focus:ring-white/30 focus:border-white/40 backdrop-blur-sm transition-all"
                           placeholder="example@fpt.edu.vn">
                    <span asp-validation-for="Email" class="text-red-300 text-sm mt-1 block"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="Password" class="block text-sm font-medium text-white/90 mb-2">
                        <i data-lucide="lock" class="w-4 h-4 inline mr-2"></i>
                        Mật khẩu
                    </label>
                    <div class="relative">
                        <input asp-for="Password" type="password" required 
                               class="w-full px-4 py-4 bg-white/10 border border-white/20 rounded-2xl text-white placeholder-white/60 focus:outline-none focus:ring-2 focus:ring-white/30 focus:border-white/40 backdrop-blur-sm transition-all pr-12"
                               placeholder="Nhập mật khẩu"
                               id="passwordInput">
                        <button type="button" onclick="togglePassword()" class="absolute right-4 top-4 text-white/60 hover:text-white/80 transition-colors">
                            <i data-lucide="eye" class="w-5 h-5" id="eyeIcon"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-red-300 text-sm mt-1 block"></span>
                </div>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="p-4 bg-red-500/20 border border-red-300/30 rounded-2xl">
                        <div class="flex items-center text-red-100 text-sm">
                            <i data-lucide="alert-circle" class="w-5 h-5 mr-3 flex-shrink-0"></i>
                            <div asp-validation-summary="All" class="list-none"></div>
                        </div>
                    </div>
                }

                <div class="flex items-center justify-between">
                    <label class="flex items-center cursor-pointer">
                        <input type="checkbox" asp-for="RememberMe" class="h-4 w-4 text-orange-500 bg-white/10 border-white/30 rounded focus:ring-orange-500/50">
                        <span class="ml-3 text-sm text-white/80">Ghi nhớ tôi</span>
                    </label>
                    <a href="#" class="text-sm text-white/80 hover:text-white font-medium transition-colors">
                        Quên mật khẩu?
                    </a>
                </div>

                <button type="submit" class="w-full flex justify-center items-center py-4 px-6 bg-gradient-to-r from-orange-500 to-red-500 hover:from-orange-600 hover:to-red-600 text-white font-semibold rounded-2xl shadow-lg transform hover:scale-[1.01] transition-all duration-200">
                    <i data-lucide="log-in" class="w-5 h-5 mr-3"></i>
                    Đăng nhập
                </button>

                <div class="text-center">
                    <span class="text-sm text-white/70">
                        Chưa có tài khoản?
                        <a asp-action="Register" asp-controller="Auth" class="text-white font-medium hover:underline ml-1">
                            Đăng ký ngay
                        </a>
                    </span>
                </div>
            </form>
        </div>

        <div class="text-center text-sm text-white/60 mt-8" data-aos="fade-up" data-aos-delay="400">
            <p>&copy; 2026 FPT University. Hệ thống quản lý sinh viên.</p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('passwordInput');
            const eyeIcon = document.getElementById('eyeIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                eyeIcon.setAttribute('data-lucide', 'eye-off');
            } else {
                passwordInput.type = 'password';
                eyeIcon.setAttribute('data-lucide', 'eye');
            }
            lucide.createIcons(); // Re-render icon mới
        }
    </script>
}